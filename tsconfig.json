{
    "compilerOptions": {
        "types": [
            "mocha",
            "chai",
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "target": "es2020",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}