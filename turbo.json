{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "inputs": [
                "src/**/*.ts",
                "src/**/*.tsx",
                "test/**/*.ts"
            ]
        },
        "test:e2e": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        },
        "test:e2e:dev": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        },
        "lint": {
            "outputs": []
        },
        "typecheck": {
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        },
        "clean": {
            "cache": false
        }
    }
}